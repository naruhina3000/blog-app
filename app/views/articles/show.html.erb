<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<% if @article.photo.attached? %>
<%= cl_image_tag @article.photo.key, height: 300, width: 400, crop: :fill %>
<%= link_to "Delete Picture", delete_photo_article_path(@article), method: :destroy %>
<% else %>
Placeholder image
<% end %>


<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3),
rgba(0,0,0,0.3)), url('<%= cl_image_path @article.photo.key, height: 300, width: 400, crop: :fill %>')">
  nice article
</div>


<p>
  <strong>Body:</strong>
  <%= @article.body %>
</p>

<%= link_to 'Edit', edit_article_path(@article) %> |
